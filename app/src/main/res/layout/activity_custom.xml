<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorensmith.exodus.Custom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="36sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:id="@+id/custompic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/exodus"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/question"
        android:layout_below="@id/custompic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would you see this movie?"
        android:textSize="30sp"
        android:gravity="center"/>
    <RadioGroup
        android:id="@+id/yes_no"
        android:layout_below="@id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            />
        <RadioButton
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            />
            </RadioGroup>
    <Button
        android:layout_below="@id/yes_no"
        android:id="@+id/dialog_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="36sp"/>

</RelativeLayout>
