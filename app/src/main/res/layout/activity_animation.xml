<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorensmith.exodus.AnimationActivity">
    <LinearLayout
        android:id="@+id/anim_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        >
        <Button
            android:id="@+id/anim_alpha"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Alpha"
            android:gravity="center"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/anim_scale"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Scale"
            android:gravity="center"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/anim_rotate"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Rotate"
            android:gravity="center"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/anim_trans"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="alpha"
            android:gravity="center"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/anim_set"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Set"
            android:gravity="center"
            android:textAllCaps="false"
            />

    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="Animation"
        android:textSize="60sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_green_light"/>

</RelativeLayout>
